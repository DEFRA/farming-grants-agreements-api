{% set bodyClasses = "accept-offer-page" %}
{% set mainClasses = "" %}
{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block main %}
  <div class="govuk-width-container">
    {% block beforeContent %}{% endblock %}
    <main id="main-content" role="main">
      {% block content %}
        <!-- Business Information Header -->
        <div class="govuk-!-margin-top-4" style="display: flex; justify-content: space-between; align-items: baseline;">
          <span id="farmName" class="govuk-body govuk-!-font-size-19" style="margin-bottom: 0;"><strong>{{ company }}</strong></span>
          <span id="farmerName" class="govuk-body govuk-!-font-size-19" style="margin-bottom: 0;"><strong>{{ farmerName or 'Alfred Waldron' }}</strong></span>
        </div>
        <div id="sbi" class="govuk-body govuk-!-font-size-16" style="margin-top: 3; margin-bottom: 0; padding-top: 0; padding-bottom: 0; line-height: 1;">
          Single business identifier (SBI): {{ sbi }}
        </div>
        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

        <!-- Back Link -->
        <a href="javascript:history.back()" class="govuk-back-link">Back</a>

        <!-- Main Heading -->
        <h1 class="govuk-heading-xl" style="font-family: 'GDS Transport', Arial, sans-serif; font-weight: bold;">Accept your offer</h1>

        <!-- Confirmation Text -->
        <p class="govuk-body govuk-!-font-size-19" style="line-height:25px;">
          If you accept this offer for funding, you confirm that:
        </p>

        <!-- Confirmation Bullet Points -->
        <ul class="govuk-list govuk-list--bullet govuk-!-font-size-19" style="line-height:25px;">
          <li>you are entering into a legally binding agreement with Defra</li>
          <li>you and your land will remain eligible for the duration of the actions you have selected</li>
          <li>you will get any required regulatory consents, permissions and licences before you do your selected actions</li>
          <li>you will complete your selected actions by following the guidance in <a href="https://www.gov.uk/find-funding-for-land-or-farms" class="govuk-link" rel="noopener noreferrer" target="_blank">Find funding for land or farms</a> that explains what you must do to get paid</li>
          <li>you will submit an annual declaration to confirm you have complied, or expect to have complied with the requirements of the actions you have selected for that year - the Rural Payments Agency will contact you when you need to do this</li>
          <li>you will comply with the <a href="#" class="govuk-link">terms and conditions</a> for your selected actions</li>
        </ul>

        <!-- Accept Button -->
        <form method="post" action="{{ '/agreement/accept-offer' if grantsProxy else '/accept-offer' }}" id="accept-offer-form">
          <input type="hidden" name="agreementId" value="{{ agreementNumber }}">
          <p id="accept-agreement-error" class="govuk-error-message"></p>
          {{ govukButton({
            text: "Accept offer",
            classes: "govuk-button--start"
          }) }}
        </form>

        <!-- Expandable Section -->
        <details class="govuk-details" data-module="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">
              If you need to make an update
            </span>
          </summary>
          <div class="govuk-details__text">
            <p class="govuk-body">Contact the Rural Payments Agency to update your offer, for example, to add more land.</p>
            <p class="govuk-body">
              <strong>Telephone:</strong> 03000 200 301<br>
              Monday to Friday, 8:30am to 5pm (except bank holidays)
            </p>
            <p class="govuk-body">
              <a href="#" class="govuk-link">Find out about call charges (opens in new tab)</a>
            </p>
          </div>
        </details>
      {% endblock %}
    </main>
  </div>
{% endblock %} 