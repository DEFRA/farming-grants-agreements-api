{% extends 'layouts/page.njk' %}
{% block pageTitle %}
  Offer accepted
{% endblock %}
{% block content %}
    <div class="govuk-grid-row" role="main">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
          <h1 class="govuk-panel__title">
            Offer accepted
          </h1>
          <div class="govuk-panel__body">
            The start date for these actions is {{ agreementStartDate | formatDate('d MMMM yyyy') }}
          </div>
        </div>
        <div class="govuk-panel__body">
          <p class="govuk-body">Your agreement number is {{ agreementNumber }}.</p>
          <h2 class="govuk-heading-m">
            What happens next
          </h2>
          <p class="govuk-body">You can
            {% if grantsProxy %}
                <a href="/agreement/view-agreement/{{ agreementNumber }}" class="govuk-link">view your full agreement</a>
            {% else %}
                {% set href = '/review-accept-offer/' + agreementNumber %}
                <a href="/view-agreement/{{ agreementNumber }}" class="govuk-link">view your full agreement</a>
            {% endif %}
            including the terms and conditions for your selected actions.</p>
          <p class="govuk-body">
            <a href="#" target="_blank" class="govuk-link">Read the guidance (opens in new tab)</a>
            to check what you must do to get paid for each action.</p>
          {% if nearestQuarterlyPaymentDate %}
            <p class="govuk-body">You will receive your first payment for these actions in
              {{ nearestQuarterlyPaymentDate }}.</p>
          {% endif %}
        </div>

        {% include "partials/help/help.njk" %}
      </div>
    </div>
{% endblock %}
